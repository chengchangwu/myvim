set tabstop=4
set softtabstop=4
set expandtab
set nocompatible
set incsearch
set hlsearch
set ruler
set showcmd
set showmatch
set number
set cursorline
set wildmenu
colorscheme codedark
syntax on
filetype indent on
let mapleader=" "
nnoremap <leader><space> :nohlsearch<CR>
nnoremap <leader>ev :vsp $MYVIMRC<CR>
nnoremap <leader>eb :vsp ~/.bashrc<CR>
